# Get your free API key from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Port to run the server on (default: 3000)
PORT=3000

# MDBList integration (optional)
# Get API key from https://mdblist.com/preferences/
MDBLIST_API_KEY=your_mdblist_api_key_here
MDBLIST_LIST_ID=your_list_id_here

# Telegram Bot (optional)
# Create a bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Add the bot to a group, then get the group ID (use /chatid bots or check bot updates)
TELEGRAM_GROUP_ID=your_group_chat_id_here

# Trakt Integration (optional)
# Create an app at https://trakt.tv/oauth/applications
TRAKT_CLIENT_ID=your_trakt_client_id
TRAKT_CLIENT_SECRET=your_trakt_client_secret
TRAKT_REDIRECT_URI=https://movies.erix-homelab.site/auth/trakt/callback
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TRAKT_ENCRYPTION_KEY=your_32_byte_hex_encryption_key
